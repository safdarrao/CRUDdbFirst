@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Product ID</th>
                <th scope="col">Product Name</th>
                <th scope="col">Price</th>
                <th scope="col">Count</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
          @for(var i = 0; i<Model.Rows.Count; i++)
          {
            <tr>
                <th>@Model.Rows[i][0]</th>
                <th>@Model.Rows[i][1]</th>
                <th>@Model.Rows[i][2]</th>
                <th>@Model.Rows[i][3]</th>
                <th>
                    <a href="@Url.Action("Edit" , "Home", new {@id = Model.Rows[i][0] })"> <button type="button" class="btn btn-primary">Edit</button> </a>
                    <a href="@Url.Action("Delete" , "Home", new {@id = Model.Rows[i][0] })"> <button type="button" class="btn btn-danger">Delete</button></a>
                </th>

            </tr>
          }
        </tbody>
    </table>
<a href="@Url.Action("Create" , "Home")">Add Product</a>

